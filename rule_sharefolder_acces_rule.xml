<!-- Rules for windows share folder events -->

<var name="CriticalFolders">H:\\\\Alchem_d|C:\\\\Critical_Folder2</var>

<group name="windows, windows_security,">
    <rule id="100110" level="3">
     <if_sid>60103</if_sid>
     <field name="win.system.eventID">^4663$</field>
     <description>File access detected from Windows Share folders</description>     
     <options>no_full_log</options>
  </rule>
  <rule id="100111" level="4">
     <if_sid>60103</if_sid>
     <field name="win.system.eventID">^4663$</field>
     <field name="win.eventdata.objectName">$CriticalFolders</field>
     <description>File access detected from critical Windows share folders</description>     
     <options>no_full_log</options>
  </rule>
  <rule id="100112" level="10">
     <if_sid>100111</if_sid>
     <time>5pm - 8am</time>
     <description>$(win.eventdata.subjectUserName) accessed $(win.eventdata.objectName) folder out of office hours.</description>    
     <options>no_full_log</options>
  </rule>
         <rule id="100113" level="5">
     <if_sid>100110</if_sid>
     <field name="win.system.eventID">^4663$</field>
     <match>DELETE</match>
     <description>File deletion detected in Windows shared folder</description>
     <options>no_full_log</options>
  </rule>
  </group>
